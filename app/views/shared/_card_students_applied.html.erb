<div class="container-fluid background-white">
  <div class= "col-xs-12">
    <div class="row">
        <!-- COluna foto -->
        <div class="col-xs-3">
          <% if student.photo? %>
            <% image_options = { height: 50, width: 50, crop: :fill } %>
            <%= cl_image_tag student.photo, image_options %>

          <% else  %>
            <%= link_to user_path(student) do %>
              <%= image_tag("icons/user.svg", class:"avatar-round-small")%>
              <% end %>

          <% end %>
        </div>
        <!-- Coluna Name, University, Rating -->
          <div class="col-xs-6">
            <div class="row student-details-card">
              <p><%= student.name || "no name"%></p>
            </div>
            <div class="row student-details-card">
              <p>Universidade Nova de Lisboa  </p>
            </div>
          </div>
        <!-- Coluna select student icon -->
        <div class="col-xs-3 ">


          <%= link_to booking_accept_path(booking), method: :post do %>
            <%= image_tag('icons/user-check-light.svg') %>
          <% end %>

          <p>Select Student</p>
          <p><%= booking.state %></p>

        </div>
    </div>
  </div>
</div>

