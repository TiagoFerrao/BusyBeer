<!-- first half of the page (50%) -->
<div class="container-fluid section-signin-top">
  <h1 class="text-center">
    BusyBear
  </h1>
  <%= image_tag 'bear.png', class: "img-responsive center-block", size:"150x150" %>
  <p class="text-center">Dont have time for those pesky tasks? Have some spare time and want to make some money? Busy bear is the app for you!</p>
</div>

<!-- second half of the page (50%) -->
<div class="container background-white">

  <div class="container-fluid section-signin-bottom">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "email", input_html: { class: 'input_with_icon email-icon'}%>
      <%= f.input :password, required: false, label: false, placeholder: "password", input_html: { class: 'input_with_icon password-icon'} %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>


      <div class="form-actions">
        <%= f.button :submit, "Log in" , class:"btn btn-accent" %>
      </div>
    <% end %>
  </div>
  <br>

  <div class="text-center">
    <span >Not registered yet? please</span>

    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
</div>
</div>
